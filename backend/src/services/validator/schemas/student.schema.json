{
  "$id": "StudentRecord",
  "type": "object",
  "properties": {
    "roll": { "type": "string", "pattern": "^[0-9]+$" },
    "name": { "type": "string", "minLength": 1 },
    "attendance": { "type": "number", "minimum": 0, "maximum": 100 },
    "marks": { "type": "number", "minimum": 0, "maximum": 100 },
    "feesPaid": { "type": "number", "minimum": 0 }
  },
  "required": ["roll", "name", "attendance", "marks", "feesPaid"],
  "additionalProperties": false
}
